%section#menu
  Menu
  %section
    .row
      .col-sm-10.col-sm-offset-1
        %h3 Speisekarte
        %br
        %ul.nav.nav-pills
          %li.active
            %a{ href:'#pizza', data: { toggle: 'pill' } } Pizza
          %li
