        %script{ src: 'https://maps.google.com/maps/api/js?sensor=false' }
        #gmap_canvas

        :javascript
          function init_map() {
            var myOptions = {
              zoom:14,
              center:new google.maps.LatLng(52.53740999999999,13.41181000000006),
              mapTypeId: google.maps.MapTypeId.ROADMAP
            };
            map = new google.maps.Map(document.getElementById("gmap_canvas"), myOptions);
            marker = new google.maps.Marker({
              map: map,
              position: new google.maps.LatLng(52.53740999999999, 13.41181000000006)
            });
            infowindow = new google.maps.InfoWindow({
              content:"<b>Pizza alla grande Berlino</b><br/>Sch&ouml;nhauser Allee 156<br/>10435 Berlin"
            });
            google.maps.event.addListener(marker, "click", function(){infowindow.open(map,marker);});
            infowindow.open(map,marker);
          };
          google.maps.event.addDomListener(window, 'load', init_map);
