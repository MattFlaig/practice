%section#contact.well
  .row
    .col-sm-6
      %form
        .form-group
          %label{ for: 'name' } Name
          %input.form-control{ type: 'text', id: 'name' }
        .form-group
          %label{ for: 'email' } Email
          %input.form-control{ type: 'email', id: 'email' }
        .form-group
          %label{ for: 'message' } Nachricht
          %textarea.form-control{ rows: '6', maxlength: '500' }
        %button.btn.btn-default.pull-right{ type: 'submit' } Senden
