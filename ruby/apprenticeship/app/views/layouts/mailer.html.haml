%hmtl
  %head
    :css
      body {
        font-family: Helvetica,sans-serif;
        background-color: #f9f9f9;
        line-height: 1.2;
      }

      a {
        color: inherit;
        text-decoration: none;
      }

      p {
        margin: 0px 0px 10px;
      }

      .small {
        font-size: 85%;
      }

      .brand-color {
        color: #C13030;
      }

      .content {
        margin: 2em auto;
        max-width: 60em;
      }

      .box {
        border-radius: 2px;
        box-shadow: 1px 1px 3px rgba(0, 0, 0, .3);
        background-color: #fff;
        margin-bottom: 1em;
        padding: 2em;
      }

      .table {
        line-height: 1.3;
        width: 100%;
      }

      .text-muted {
        color: #777;
      }

      hr {
        border-width: 1px 0px 0px;
        border-style: solid none none;
        border-color: #EEE -moz-use-text-color -moz-use-text-color;
        -moz-border-top-colors: none;
        -moz-border-right-colors: none;
        -moz-border-bottom-colors: none;
        -moz-border-left-colors: none;
        border-image: none;
        margin: 1.5em 0;
      }

      hr.full {
        margin-left: -2em;
        margin-right: -2em;
      }

      hr.near {
        margin-top: .5em;
        margin-bottom: 2.5em;
      }

      th {
        text-align: left;
        vertical-align: bottom;
      }

      td {
        padding: .25em;
        vertical-align: top;
      }
